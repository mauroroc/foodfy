{% extends "layout.njk" %}

{% block content %}
    
    <h2 class="cards-title">Buscando por "{{filter}}"</h2>
    
    <section class="cards">
    {% for item in items %}
        <div class="card_item">
            <a href="/receita/{{item.id}}">
                <img src="{{item.src}}" alt="{{item.title}}">
                <h4>
                    {{item.title}}
                </h4>
                <p>
                    {{item.namechef}}
                </p>
            </a>
        </div>
    {% endfor %}
        
    </section>
    <div class="pagination" data-page={{params.page}} data-total={{params.total}} data-filter={{filter}}></div>
    
    <script src="js/pagination.js"></script>
{% endblock %}