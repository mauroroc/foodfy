{% extends "layout.njk" %}

{% block content %}

    <section class="chefs">
    {% for item in items %}
        <div class="chef_item">
            <div>
                <img src="img/{{item.avatar}}" alt="{{item.name}}">
            </div>
            <div>
                <h4>
                    {{item.name}}
                </h4>
                <h3>
                    {{item.total_recipes}} Receita(s)
                </h3> 
            </div>
        </div>
    {% endfor %}
    </section>
{% endblock %}