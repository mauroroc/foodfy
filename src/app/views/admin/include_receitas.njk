<section class="adm_cards">
    {% for item in items %}
        <div class="adm_card_item">
            <div>
                <img src="{{item.image}}" alt="{{item.title}}">
            </div>
            <div>
                <h4>
                    {{item.title}}
                </h4>
                <p>
                    {{item.namechef}}
                </p>
                <a href="/admin/recipes/{{item.id}}"><strong>Visualizar</strong></a>
            </div>
        </div>
    {% endfor %}
    </section>