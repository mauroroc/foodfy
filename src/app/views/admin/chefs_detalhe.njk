{% extends "admin/adm_layout.njk" %}

{% block content %}
    <div class="detail-top">
        <div class="detail-top-title">
            <h3>Chef: {{chef.name}}</h3>
        </div>
        <div class="detail-top-button">
            <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
        </div>
    </div>
    <div class="detail-chef">
        <img src="../../img/{{chef.avatar}}" alt="{{chef.name}}">
            <h2>
            {{chef.name}}
        </h2>
        <h4>
            {{chef.total_recipes}} Receita(s)
        </h4>        
    </div>  
    <div class="receipts-chef">
        <h3>Receitas</h3>
        {% include "admin/include_receitas.njk" %}
    </div> 

{% endblock %}